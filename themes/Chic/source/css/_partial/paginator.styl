/** pagination - Apple 风格分页 **/

.pagination
  display flex
  flex-direction row
  justify-content center
  list-style none
  white-space nowrap
  width 100%
  padding-top 2em

  a, span
    -webkit-font-smoothing antialiased
    font-size 13px
    color #86868B
    letter-spacing 0.1em
    font-weight 500
    padding 8px 12px
    text-decoration none
    transition all 0.15s ease-out
    border-radius 8px

  .page-number
    margin 0 8px
    box-sizing border-box
    position relative
    display inline

    &.disabled
      display none

    &:hover a
      color #0071E3
      background rgba(0, 113, 227, 0.1)

    .dark-theme &:hover a
      color #2997FF
      background rgba(41, 151, 255, 0.1)

    &.current
      a
        color #FFFFFF
        background #0071E3

      .dark-theme & a
        color #1D1D1F
        background #2997FF
