/**
 * 苔藓绿配色方案 (Sage Green)
 * 设计理念：自然、柔和、温暖的阅读体验
 **/

/** light theme - 苔藓绿浅色主题 **/

// 背景色 - 暖沙色，营造纸张感
$light-background-color = #F9F8F4

// 文字色 - 深灰蓝，非纯黑减少视觉疲劳
$light-font-color = #2C3E50
$light-font-secondary-color = #8C9688

// 导航激活色 - 苔藓绿
$light-navbar-active-color = #5C6B55

// 链接色 - 深灰蓝为主，苔藓绿为悬停
$light-global-link-color = #2C3E50
$light-global-link-hover-color = #5C6B55

// 文章链接 - 苔藓绿为主，淡金色加深为强调
$light-post-link-color = #5C6B55
$light-post-link-hover-color = #4A5540

// 分页链接
$light-pagination-link-color = #5C6B55
$light-pagination-link-active-color = #2C3E50

// 边框色 - 淡米灰
$light-border-color = #E8E4DC

// 代码配色 - 苔藓绿
$light-code-font-color = #5C6B55
$light-code-background-color = #FFFFFF

// 引用块
$light-post-blockquote-border-color = #5C6B55
$light-post-blockquote-background-color = #FFFFFF

// 表格
$light-post-table-background-color = #FFFFFF

// 强调色 - 淡金色
$light-accent-color = #E6D5B8

/** dark theme - 苔藓绿深色主题 **/

// 背景色 - 带绿调的深色
$dark-background-color = #1A1E1A

// 文字色 - 带暖调的浅色，非纯白
$dark-font-color = #E8EBE4
$dark-font-secondary-color = #9CA598

// 导航激活色 - 提亮的苔藓绿
$dark-navbar-active-color = #8BA383

// 链接色 - 浅色为主，苔藓绿为悬停
$dark-global-link-color = #E8EBE4
$dark-global-link-hover-color = #8BA383

// 文章链接 - 苔藓绿调亮，暖金色为强调
$dark-post-link-color = #8BA383
$dark-post-link-hover-color = #A8C09E

// 分页链接
$dark-pagination-link-color = #8BA383
$dark-pagination-link-active-color = #E8EBE4

// 边框色 - 深灰绿
$dark-border-color = #3A403A

// 代码配色 - 苔藓绿调亮
$dark-code-font-color = #8BA383
$dark-code-background-color = #252A25

// 引用块
$dark-post-blockquote-border-color = #8BA383
$dark-post-blockquote-background-color = #252A25

// 表格
$dark-post-table-background-color = #2A302A

// 强调色 - 降低亮度的金色
$dark-accent-color = #C9B896
