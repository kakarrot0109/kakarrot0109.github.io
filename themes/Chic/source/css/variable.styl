/**
 * 苹果风格配色方案 (Apple Inspired)
 * 设计理念：精致灰度层次 + 活力蓝点缀 + 温暖质感
 **/

/** light theme - 温暖浅色主题 **/

// 背景色 - Apple 官网的温暖灰白，非纯白
$light-background-color = #F5F5F7

// 文字色 - 深灰而非纯黑，更柔和
$light-font-color = #1D1D1F
$light-font-secondary-color = #86868B

// 导航激活色 - Apple Blue
$light-navbar-active-color = #0071E3

// 链接色 - Apple Blue 系列
$light-global-link-color = #1D1D1F
$light-global-link-hover-color = #0071E3

// 文章链接 - Apple Blue
$light-post-link-color = #0071E3
$light-post-link-hover-color = #0077ED

// 分页链接
$light-pagination-link-color = #0071E3
$light-pagination-link-active-color = #1D1D1F

// 边框色 - 柔和的灰
$light-border-color = #D2D2D7

// 代码配色
$light-code-font-color = #BF5AF2
$light-code-background-color = #FFFFFF

// 引用块
$light-post-blockquote-border-color = #0071E3
$light-post-blockquote-background-color = #FFFFFF

// 表格
$light-post-table-background-color = #FFFFFF

// 强调色 - 活力橙
$light-accent-color = #FF9500

/** dark theme - 精致深色主题 **/

// 背景色 - Apple 深色，不是纯黑
$dark-background-color = #1D1D1F

// 文字色 - 柔和的白
$dark-font-color = #F5F5F7
$dark-font-secondary-color = #86868B

// 导航激活色 - 亮蓝
$dark-navbar-active-color = #2997FF

// 链接色 - 亮蓝系列
$dark-global-link-color = #F5F5F7
$dark-global-link-hover-color = #2997FF

// 文章链接 - 亮蓝
$dark-post-link-color = #2997FF
$dark-post-link-hover-color = #64B5FF

// 分页链接
$dark-pagination-link-color = #2997FF
$dark-pagination-link-active-color = #F5F5F7

// 边框色 - 深灰
$dark-border-color = #424245

// 代码配色 - 紫色
$dark-code-font-color = #BF5AF2
$dark-code-background-color = #2C2C2E

// 引用块
$dark-post-blockquote-border-color = #2997FF
$dark-post-blockquote-background-color = #2C2C2E

// 表格
$dark-post-table-background-color = #2C2C2E

// 强调色 - 活力橙
$dark-accent-color = #FF9F0A
