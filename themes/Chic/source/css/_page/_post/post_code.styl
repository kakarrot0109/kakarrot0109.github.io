.post-content
  code, pre
    line-height 1.7em
    padding 7px
    font-size 13px
    font-family Consolas, Monaco, Menlo, Consolas, monospace
  code
    line-height 1.7em
    padding 3px 5px
    border-radius 4px
    color $light-code-font-color
    background $light-code-background-color
    .dark-theme &
      color $dark-code-font-color
      background $dark-code-background-color

  h1,h2,h3,h4,h5
    code
      font-size inherit

  figure.highlight
    margin 0.8em 0
    position relative
    background transparent
    border none
    box-shadow none
    border-radius 0
    overflow-x auto

    .dark-theme &
      background transparent

    // Header - 极简风格
    .code-header
      display flex
      justify-content space-between
      align-items center
      padding 12px 20px
      background transparent
      border none
      font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif

      .dark-theme &
        background transparent

      .code-filename
        font-size 13px
        color #666
        display flex
        align-items center
        gap 6px
        font-weight 500
        .dark-theme &
          color #888

        svg
          color #999
          .dark-theme &
            color #666

      .code-controls
        display flex
        align-items center
        gap 12px

      .code-lang
        font-size 12px
        color #999
        font-weight 500
        text-transform uppercase
        .dark-theme &
          color #666

      .code-copy-btn
        border none
        background transparent
        color #999
        cursor pointer
        font-size 12px
        padding 2px 6px
        border-radius 3px
        transition all 0.2s ease
        font-family inherit
        svg
          width 12px
          height 12px
        &:hover
          color #333

        .dark-theme &
          color #666
          &:hover
            color #aaa

        &.copied
          color #4CAF50
          .dark-theme &
            color #4CAF50

    // Wrapper for scrolling
    .code-wrapper
      overflow-x auto
      width 100%
      &::-webkit-scrollbar
        height 4px
      &::-webkit-scrollbar-thumb
        background-color #ddd
        border-radius 2px
        .dark-theme &
          background-color #444

    // Content
    table
      position relative
      width 100%
      border-collapse collapse
      border 0
      margin 0
      padding 0

    .code
      pre
        margin 0
        padding 12px 0
        background transparent
        border none
        color #333
        .dark-theme &
          color #c9d1d9

    .gutter
      width 10px
      color #ccc
      text-align right
      padding 12px 15px 12px 0
      background transparent
      border none
      user-select none
      .dark-theme &
        color #6e7681
      pre
        margin 0
