//// ========== TOC - Apple 风格目录 ========== //

$post-toc-width = 14rem

$padding-4 = 0.25rem
$padding-6 = 0.375rem
$padding-12 = 0.75rem
$padding-14 = 0.875rem
$padding-16 = 1rem

$font-size-12 = 0.75rem
$font-size-13 = 0.8125rem

.post-toc
  position fixed
  top 100px
  right 2em
  width $post-toc-width
  font-size $font-size-13

  .tocbot-list
    max-height 60vh
    max-width 220px
    overflow auto
    position relative
    padding-right $padding-14

    &::-webkit-scrollbar
      width 4px
      height 4px

    &::-webkit-scrollbar-thumb
      background-color #D2D2D7
      border-radius 2px

    .dark-theme &::-webkit-scrollbar-thumb
      background-color #424245

    ul
      list-style none
      position inherit
      overflow hidden

      li
        margin-left $padding-4

    a
      color #86868B
      transition color 0.12s ease-out

      &:hover
        color #0071E3

    .dark-theme & a
      color #86868B

      &:hover
        color #2997FF

  .toc-link::before
    background-color transparent

  .is-active-link
    color #0071E3 !important
    font-weight 500

    .dark-theme &
      color #2997FF !important

  .is-active-link::before
    background-color #0071E3

    .dark-theme &
      background-color #2997FF

  .tocbot-list-menu
    margin $padding-16 $padding-12
    font-size $font-size-12

    a
      display block
      margin $padding-6 0
      color #86868B
      cursor pointer
      transition color 0.12s ease-out

    a:hover
      color #0071E3

    .dark-theme & a
      color #86868B

    .dark-theme & a:hover
      color #2997FF
