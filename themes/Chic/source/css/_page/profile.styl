/** Profile **/
.profile-container
  justify-content center
  align-items center
.intro
  text-align center
  .avatar
    padding 10px
    img
      width 128px
      height auto
      display inline-block
      -webkit-border-radius 100%
      border-radius 100%
      -webkit-box-shadow 0 0 0 0.3618em rgba(0, 0, 0, 0.05)
      box-shadow 0 0 0 0.3618em rgba(0, 0, 0, 0.05)
      margin 0 auto
      transition opacity 0.12s ease-out
      cursor pointer
      &:hover
        opacity 0.85

.nickname
  font-size 2em
  font-weight normal

.links
  a
    padding: 0 5px
    &:hover
      background-color: transparent
  .iconfont
    font-size: 2em
